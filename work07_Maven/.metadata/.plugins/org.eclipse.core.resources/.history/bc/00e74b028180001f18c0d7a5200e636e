<mapper namespace="FruitMapper">
	<resultMap type="item" id="selectItemRM">
	
	</resultMap>
	
	<sql id="select-item">
		
		SELECT item_id, item_name, price, description, picture_url
		FROM item
	</sql>
	
	<select id="getItemList" resultType="item">
		SELECT item_id, item_name, price, description, picture_url
		FROM item
	
	</select>
	
	<select id="getItem" parameterType="string" resultType="item">
		SELECT item_id, item_name, price, description, picture_url
		FROM item
		WHERE item_id = ${VALUE}
	</select>
	
