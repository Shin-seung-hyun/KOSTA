package com.web.spring.repository;

import java.util.Collection;
import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;

import com.web.spring.entity.User;

public interface UserRepository extends JpaRepository<User, Integer> {
	
	//이름에 종각을 포함하는 User id 로 내림차순 정렬
	//List<User> findByNameContainingOrderByIdDesc(String name);
	
	//이름을 중복 제거하고 이름별 오름차순 정렬
	List<User> findDistinctByNameOrderByNameDesc(String name);
	
	//이름이 홍종각이거나 id가 1인사람 검색
	List<User>findByNameOrId(String name, Integer id);
	
}
