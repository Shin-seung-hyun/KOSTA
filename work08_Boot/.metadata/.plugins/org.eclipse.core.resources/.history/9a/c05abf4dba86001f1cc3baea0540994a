package com.web.spring.controller;


import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestAttribute;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.web.spring.dto.Member;


/*
 * 단순 페이지를 요청하는 Get 방식의 Controller를 다뤄보자
 *  
 */
@RestController
public class GetController {

	
	//1. 
	@GetMapping("/members")
	public String getMember(String id) {
		
		//서비스 함수 호출 결과로 id에 해당하는 Member 객체를 리턴받았닥고 치고,
		Member rvo = new Member("kosta", "1234", "홍종각", "종각");
		return rvo.toString();
	}
	
	//2. http://localhost:9000/member?name=홍종각&address=종각
	@GetMapping("/member")
	public String getMember(@RequestParam String name,
							@RequestParam String address) {
		
		return name+" 님이 사는 곳은 " + address;
	}
	
	//3. http://localhost:9000/member/James : 주소 뒤에 바로 값 붙이는 방법
	@GetMapping("/member/{name}")
	public String getMember(@PathVariable String name) {
		
		return "Hello, " + name;
	}
	
	
	
}
