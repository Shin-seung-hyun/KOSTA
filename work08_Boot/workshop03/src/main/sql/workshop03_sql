select custom_id, regDate, name, password, email, role_id, name
from custom c, custom_role cr , role r;

select * 
from custom, custom_role, role
where custom.custom_id =  custom_role.custom_id
and
custom_role.role_id = role.role_id
order by custom.custom_id;

