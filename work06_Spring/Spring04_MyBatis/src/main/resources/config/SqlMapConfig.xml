<?xml version="1.0" encoding="UTF-8" ?>
<!--  

MySQL의 핵심(!)이 되는 설정문서다.

-->

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

<!-- 1. DB서버 정보를 가진 properties 파일을 wiring  -->
<properties resource="config/dbconn.properties" />


<!-- 2. VO 객체 wiring -->
<typeAliases>
	<typeAlias type="mybatis.services.domain.User" alias="user" />
</typeAliases>


<!-- 3. JDBC 환경 구축 -->
<environments default="aa">
	<environment id="aa">
		<transactionManager type="JDBC"/>
		<dataSource type="UNPOOLED"> <!-- DriverManager 방식을 사용  -->
			<property name="driver" value="${jdbc.mysql.driver}"/>
			<property name="url" value="${jdbc.mysql.url}"/>
			<property name="username" value="${jdbc.mysql.username}"/>
			<property name="password" value="${jdbc.mysql.password}"/>
		</dataSource>
	</environment>
</environments>


<!-- 4. SQL구문의 모듈화된 정보를 wiring -->
<mappers>
	<mapper resource="mapper/mybatis-userservice-mapping.xml" />
</mappers>

	
</configuration>